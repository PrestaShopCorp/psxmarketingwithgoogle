                    "value": {
                      "success": true,
                      "method": "insert"
                    }
                  },
                  "removeVerificationMeta": {
                    "value": {
                      "success": true,
                      "method": "delete"
                    }
                  },
                  "toggleGoogleAccountIsRegistered": {

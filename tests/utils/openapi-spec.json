            }
          }
        },
        "basicResponse": {
          "type": "object",
          "properties": {
            "success": {
              "type": "boolean"
            },
            "message": {
              "type": "string"
            }
          }
        },
        "body": {
          "oneOf": [
            {
              "$ref": "#/components/schemas/getCarrierValuesRequest"
            },
            {
              "$ref": "#/components/schemas/setWebsiteVerificationMetaRequest"
            },
            {
              "$ref": "#/components/schemas/removeWebsiteVerificationMetaRequest"
            },
            {
